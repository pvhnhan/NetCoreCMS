@{
    ViewData["Title"] = "Trang chủ - Home Module";
    Layout = "_Layout";
}

<div class="fade-in">
    <!-- Hero Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="display-4 text-primary">
                        <i class="fas fa-cogs me-3"></i>CMS Platform
                    </h1>
                    <p class="lead">Hệ thống quản lý nội dung hiện đại</p>
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="dashboard-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 id="totalUsers">0</h3>
                                        <p class="mb-0">Người dùng</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dashboard-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 id="totalMenus">0</h3>
                                        <p class="mb-0">Menu</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-bars"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dashboard-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 id="totalBanners">0</h3>
                                        <p class="mb-0">Banner</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-images"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center mb-4">Tính năng chính</h2>
        </div>
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Bảo mật cao</h5>
                    <p class="card-text">Hệ thống xác thực JWT với quản lý mật khẩu an toàn</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Responsive</h5>
                    <p class="card-text">Giao diện tương thích với mọi thiết bị</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-database fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Database</h5>
                    <p class="card-text">PostgreSQL với Entity Framework Core</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-code fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Clean Architecture</h5>
                    <p class="card-text">Kiến trúc sạch với Repository Pattern</p>
                </div>
            </div>
        </div>
    </div>

    <!-- System Info Section -->
    <div class="row" id="systemInfoSection" style="display: none;">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin hệ thống
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Tên hệ thống:</strong> <span id="systemName">-</span></p>
                            <p><strong>Phiên bản:</strong> <span id="systemVersion">-</span></p>
                            <p><strong>Mô tả:</strong> <span id="systemDescription">-</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Email liên hệ:</strong> <span id="systemEmail">-</span></p>
                            <p><strong>Số điện thoại:</strong> <span id="systemPhone">-</span></p>
                            <p><strong>Địa chỉ:</strong> <span id="systemAddress">-</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/modules/home/assets/js/home.js"></script>
} 